<?xml version="1.0" encoding="utf-8"?>
<com.example.customviewlibrary.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    app:custom_background="@drawable/main_bg">

    <com.example.customviewlibrary.CustomTextView
        android:id="@+id/txvEmployeeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_employee_category"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:padding="5dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/txvEmployeeDetails"/>

    <com.example.customviewlibrary.CustomButton
        android:id="@+id/btnFullTimeEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/full_time_employee"
        android:padding="10dp"
        android:layout_below="@+id/view"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        app:custom_borderColor="@android:color/holo_blue_dark"
        app:custom_radius="5dp"
        app:custom_borderWidth="2dp"
        app:custom_background="@android:color/holo_blue_light"/>

    <com.example.customviewlibrary.CustomButton
        android:id="@+id/btnPartTimeEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/part_time_employee"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnFullTimeEmployee"
        app:custom_borderColor="@android:color/holo_blue_dark"
        app:custom_radius="5dp"
        app:custom_borderWidth="2dp"
        app:custom_background="@android:color/holo_blue_light"/>

</com.example.customviewlibrary.CustomLayout>